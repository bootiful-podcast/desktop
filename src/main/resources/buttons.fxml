<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="root" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fm.bootifulpodcast.desktop.ButtonsController">
    <BorderPane style="-fx-background-color: #336699">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
        <left>
        <HBox>
            <Label fx:id="connectedIcon">
                <padding>
                    <Insets right="10.0" />
                </padding>
            </Label>
            <Label fx:id="connectedStatusLine" alignment="BASELINE_LEFT" textFill="WHITE">
                connected to http://foo/bar
            </Label>
        </HBox>
        </left>
        <right>
            <HBox fx:id="buttons" alignment="CENTER_RIGHT" spacing="10">
                <Button fx:id="stopMonitoringButton" text="Stop Monitoring" />
                <Button fx:id="publishButton" text="Publish" />
                <Button fx:id="newPodcastButton" text="New Podcast" />
                <Button fx:id="saveMediaToFileButton" text="Save File" />
            </HBox>
        </right>
    </BorderPane>
</VBox>
